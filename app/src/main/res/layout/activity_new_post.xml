<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.uninstall.ics466app.NewPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="NEW POST"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:textSize="35sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*Required Fields"
                android:id="@+id/requiredText"
                android:textSize="14sp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:textColor="#FF0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*Textbook Subject:"
                android:id="@+id/selectSubject"
                android:textSize="25sp"
                android:layout_below="@+id/requiredText"
                android:textColor="#33CC00" />

            <Spinner
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:id="@+id/subjectSpinner"
                android:layout_below="@+id/selectSubject"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_marginTop="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TextBook Title:"
                android:id="@+id/titleText"
                android:textSize="25sp"
                android:layout_below="@+id/subjectSpinner"
                android:textColor="#33CC00" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: Intro to Operating Systems"
                android:id="@+id/editText"
                android:layout_below="@+id/titleText" />

            <TextView
                android:layout_marginTop="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*ISBN Number (No Dashes):"
                android:id="@+id/textISBN"
                android:textSize="25sp"
                android:layout_below="@+id/editText"
                android:textColor="#33CC00" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Example: 9784048677608"
                android:id="@+id/enterISBN"
                android:layout_below="@+id/textISBN" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="67sp"
                android:textSize="23sp"
                android:text="Create Posting"
                android:id="@+id/postButton"
                android:layout_below="@id/enterISBN"
                android:layout_toRightOf="@+id/cancelButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="67sp"
                android:textSize="23sp"
                android:text="Cancel"
                android:id="@+id/cancelButton"
                android:layout_below="@id/enterISBN"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
